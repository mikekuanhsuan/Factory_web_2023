@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
    ViewData["Title"] = "LoginList";
}
<div class="login-box">
    <div class="login-logo">
        <label>晉瑜</label>
    </div>
    <!-- /.login-logo -->
    <div class="card">
        <div class="card-body login-card-body">
            <p class="login-box-msg">登入</p>
            <div class="input-group mb-3">
                <input id="txtEmail" type="email" class="form-control" placeholder="帳號">
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-envelope"></span>
                    </div>
                </div>
            </div>
            <div class="input-group mb-3">
                <input id="txtPassword" type="password" class="form-control" placeholder="密碼">
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-lock"></span>
                    </div>
                </div>
            </div>
            <div class="social-auth-links text-center mb-3">
                <div class="">
                    <button id="btnSend" type="submit" class="btn btn-primary btn-block">Sign In</button>
                </div>
                <!-- /.col -->
            </div>
            <!-- /.social-auth-links -->
           @* <div  style="text-align:center">
                <div>
                    <p class="mb-1">
                        <a href="forgot-password.html">忘記密碼</a>
                    </p>
                </div>
            </div>*@
        </div>
        <!-- /.login-card-body -->
    </div>
</div>

<script src="~/lib/sweetalert2/sweetalert2.min.js"></script>
<link href="~/lib/sweetalert2/sweetalert2.min.css" rel="stylesheet" />

@section Scripts{
    <script>
        $("#btnSend").click(function () {
            var email = $("#txtEmail").val();
            var password = $("#txtPassword").val();
            $.ajax({
                url: '@Url.Content("~/ajax/LoginCheck")',
                method: "POST",
                data: { "Account": email, "password": password },
                dataType: "text",
                success: function (res) {
                    console.log(res)
                    if(res == "true"){
                        window.location.href = '@Url.Content("~/home/Index")'
                    }else if (res == "false") {
                            Swal.fire({
                                icon: 'error',
                                title: '此帳號尚未起用!',
                            })
                    } else if (res == "ADerror") {
                            Swal.fire({
                                icon: 'error',
                                title: 'AD不通過(密碼錯誤)!',
                            })
                    }else{
                         Swal.fire({
                                icon: 'error',
                                title: '帳號有誤請重新輸入!',
                            })
                    }
                }
            })
        })
    </script>
}