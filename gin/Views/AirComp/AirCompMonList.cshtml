                    $("[id='air4']").prop("hidden", true);
                    $("[id='air5']").prop("hidden", true);
                } else {
                    $("[id='air1']").prop("hidden", true);
                    $("[id='air5']").prop("hidden", true);
                }
            }
            else if (fact == "ZB-T1HIST") {
                if (m == "#1#2#3") {
                    $("[id='air4']").prop("hidden", true);
                    $("[id='air5']").prop("hidden", true);
                } else if (m == "#4#5") {
                    $("[id='air3']").prop("hidden", true);
                    $("[id='air4']").prop("hidden", true);
                    $("[id='air5']").prop("hidden", true);
                }
            }
            else if (fact == "KH-PCC-LH") {
                $("[id='air3']").prop("hidden", true);
                $("[id='air4']").prop("hidden", true);
                $("[id='air5']").prop("hidden", true);
            }
            else if (fact == "LD-T1HIST") {
                if (m == "#0") {
                    $("[id='air4']").prop("hidden", true);
                    $("[id='air5']").prop("hidden", true);
                }
                else if (m == "#1") {
                    $("[id='air3']").prop("hidden", true);
