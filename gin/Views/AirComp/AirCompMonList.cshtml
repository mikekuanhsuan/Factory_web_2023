                $("[id='air5']").prop("hidden", true);
            }
            else if (fact == "HL-T1HIST") {
                $("[id='air3']").prop("hidden", true);
                $("[id='air4']").prop("hidden", true);
                $("[id='air5']").prop("hidden", true);
            }
            else {

            }
            $("#myTable").DataTable({
                "paging": false,
                "lengthChange": false,
                "searching": false,
                "ordering": false,
                "info": true,
                "autoWidth": true,
                "responsive": false,
                "fixedHeader": true,
                "scrollCollapse": true,
                "scrollY": "39vh",
                "scrollX": true, "columnDefs": [
                    //给第一列指定宽度为表格整个宽度的7%
                    { "width": "5%", "targets": 0 }
                ]
            });
        })

        var linChartCanvas = $('#linChar').get(0).getContext('2d');
        var areaChartOptions = {
            title: {
                display: true,
                text: "比功率",
                fontsize: 16
            },
            maintainAspectRatio: false,
            responsive: true,
            legend: {
                display: true,
                position: 'bottom',
                labels: {
                    boxWidth: 30,
                    boxHeight: 80,
                    fontStyle: 'bold',
                }
            },
            scales: {
                xAxes: [{
                    gridLines: {
                        display: false
                    },
                }],
                yAxes: [{
                    id: 'A',
                    type: 'linear',
                    position: 'left'

                },
                {
                    id: 'B',
                    type: 'linear',
                    position: 'right',
                    gridLines: {
                        display: false,
                    }
                }]
            },
            tooltips: { //滑鼠移到點上顯示資訊
                enabled: true,
                intersect: false,
                mode: 'index',
            },
        };
        var areaChartData = {
            labels: @Html.Raw(Json.Serialize(Model.dateTime)),
            datasets: [
                {
                    type: 'line',
                    yAxisID: 'A',
                    label: "比功率",
                    backgroundColor: 'blue',
                    borderColor: 'blue',
                    fill: false,
                    data: @Html.Raw(Json.Serialize(Model.specificPower)),
                },
                {
                    type: 'line',
                    yAxisID: 'A',
                    label: '平均比功率',
                    backgroundColor: 'red',
                    borderColor: 'red',
                    pointRadius: false,
                    fill: false,
                    data: @Html.Raw(Json.Serialize(Model.Avg)),
                },
            ]
        }

        var linChartOptions = $.extend(true, {}, areaChartOptions)
        var linchartData = $.extend(true, {}, areaChartData)

        var linechart = new Chart(linChartCanvas, {
            type: 'bar',
            data: linchartData,
            options: linChartOptions,
        })

        function LoadNewChart() {
            var day = $("#day").val();
            factory = "@ViewBag.factory";
            var millId = $("#millId").val();
            millId = millId.replaceAll("#", "%23");

            console.log(millId)
            document.location = `/AirComp/AirCompMonList?factory=${factory}&day=${day}&m=${millId}`;
        };

        $("#millId").change(function () {
            LoadNewChart()
        })
        $("#btn_excel").click(function () {
            var val = [];
            var day = $("#day").val();
            var millId = $("#millId").val();
            var specificPower = @Html.Raw(Json.Serialize(Model.specificPower));
            var avg = @Html.Raw(Json.Serialize(Model.Avg));
            var date = @Html.Raw(Json.Serialize(Model.dateTime));
            var checkbox = $(".check").filter(':checked').map(function () {
                return /* key: */$(this).val();
            }).get();
            var tt = { "specificPower": specificPower, "avg": avg, "factoryId": factory, "checkBox": checkbox, "date": date, "day": day, "m": millId };
            var jsonData = JSON.stringify(tt);
            $.ajax({
                url: `@Url.Content("~/AirComp/CheckData")`,
                type: "POST",
                data: { "data": jsonData },
                success: function (response) {
                    if (response == "Ok") {
                        document.location = `../aircomp/CreatEexceldMon?fock=` + encodeURIComponent(jsonData);
                    } else {
                        Swal.fire('無資料');
                    }
                },
                error: function (jqXHR, textStatus, errorThrown) {
                    console.log(textStatus, errorThrown);
                }
            });

        });

        //讀取打勾的部分顯示新的圖表
        $("input[class=check]").click(function () {
            var val = $(this).val();
            var name = "";
            var color = "";
            var m = "@list";

            day = $("#day").val();
            switch (val) {
                case "AirConsumption":
                    name = "空氣用量M3/Min";
                    color = "rgba(255, 206, 86, 0.8)";
                    break;
                case "PowerC":
                    name = "用電量";
                    color = "rgba(75, 192, 192, 0.8)";
                    break;
                case "PowerC01":
                    name = "#1用電量";
                    color = "rgb(240, 0, 120, 0.8)";
                    break;
                case "WorkTime01":
                    name = "#1 運轉(分)";
                    color = "rgb(70, 163, 255, 0.8)";
                    break;
                case "PowerC02":
                    name = "#2 用電量";
                    color = "rgb(238, 232, 170, 0.8)";
                    break;
                case "WorkTime02":
                    name = "#2 運轉(分)";
                    color = "rgb(34, 139, 34, 0.8)";
                    break;
                case "PowerC03":
                    name = "#3 用電量";
                    color = "rgb(178, 34, 34, 0.8)";
                    break;
                case "WorkTime03":
                    name = "#3 運轉(分)";
                    color = "rgb(199, 21, 133, 0.8)";
                    break;
                case "PowerC04":
                    name = "#4 用電量";
                    color = "rgb(255, 182, 193, 0.8)";
                    break;
                case "WorkTime04":
                    name = "#4 運轉(分)";
                    color = "rgb(112, 66, 20, 0.8)";
                    break;
                case "PowerC05":
                    name = "#5 用電量";
                    color = "rgb(255, 165 ,0, 0.8)";
                    break;
                case "WorkTime05":
                    name = "#5 運轉(分)";
                    color = "rgb(160, 32, 240,0.8)";
                    break;
            }
            var input = $(this).is(":checked");
            $.ajax({
                url: `@Url.Content("~/AirComp/LoadNewMonData")`,
                mthod: 'POST',
                data: { "f": factory, "m": m, "p": val, "d": day },
                dataType: "JSON",
                success: function (res) {
                    console.log("M   " + m + "f   " + factory + "p   " + val + "d   " + day);
                    if (input) {
                        linchartData.datasets.push({
                            label: name,
                            yAxisID: 'B',
                            backgroundColor: color,
                            borderColor: color,
                            pointRadius: false,
                            data: res
                        });
                        linechart.update();
                    } else {
                        let index = linchartData.datasets.findIndex(d => d.label === name);
                        if (index !== -1) {
                            linchartData.datasets.splice(index, 1);
                        }
                        linechart.update();
                    }
                }
            })


        });
        //月份修改
        $("#day").change(function () {
            LoadNewChart()
        })
        //向前
        $("#rightdate").click(function () {
            var day = $("#day").val();
            var ss = new Date();
            var m = ss.getMonth() + 1;
            if (m > 0) {
                m = "0" + m;
            }
            var ym = ss.getFullYear() + "-" + m;
            if (ym == day) {
                console.log("相同");
            } else {
                month = day.split("-");
                y = Number(month[0]);
                M = Number(month[1]);
                M = M + 1;
                if (M > 12) {
                    y = y + 1;
                    M = 1;
                    if (M <= 9) {
                        M = "0" + M;
                    }
                } else {
                    if (M <= 9) {
                        M = "0" + M;
                    }
                }
                ym = y + "-" + M;
                $("#day").val(ym);
                LoadNewChart()
            }

        })
        //向後
        $("#leftdate").click(function () {
            var day = $("#day").val();
            month = day.split("-");
            console.log(day)
            y = Number(month[0]);
            M = Number(month[1]);
            M = M - 1;
            if (M == 0) {
                y = y - 1;
                M = 12;
                if (M <= 9) {
                    M = "0" + M;
                }
            } else {
                if (M <= 9) {
                    M = "0" + M;
                }
            }
            var ym = y + "-" + M;

            $("#day").val(ym);
            LoadNewChart()
        })

